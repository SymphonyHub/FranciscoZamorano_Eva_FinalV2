<!-- Contenedor principal para editar un usuario -->
<div class="container mt-5">
    <!-- Título de la sección -->
    <h2 class="text-center">Editar Usuario</h2>
    <!-- Formulario para editar un usuario -->
    <form action="/users/<%= user.id %>?_method=PUT" method="POST">
        <!-- Campo para el nombre del usuario -->
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
        </div>
        <!-- Campo para el email del usuario -->
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
        </div>
        <!-- Campo para la contraseña del usuario -->
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese una nueva contraseña si desea cambiarla">
        </div>
        <!-- Botón para guardar los cambios -->
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <!-- Botón para cancelar y volver a la lista de usuarios -->
        <a href="/users" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
