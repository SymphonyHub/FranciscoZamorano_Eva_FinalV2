<!-- Sección para editar un plan -->
<section>
    <!-- Título de la sección -->
    <h2>Editar Plan</h2>
    <!-- Formulario para editar un plan -->
    <form action="/plans/<%= plan.id %>?_method=PUT" method="POST">
        <!-- Campo para el nombre del plan -->
        <div class="form-group">
            <label for="name">Nombre:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= plan.name %>" required>
        </div>
        <!-- Campo para el precio del plan -->
        <div class="form-group">
            <label for="price">Precio:</label>
            <input type="text" class="form-control" id="price" name="price" value="<%= plan.price %>" required>
        </div>
        <!-- Campo para la duración del plan -->
        <div class="form-group">
            <label for="duration">Duración:</label>
            <input type="text" class="form-control" id="duration" name="duration" value="<%= plan.duration %>" required>
        </div>
        <!-- Botón para enviar el formulario -->
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</section>
